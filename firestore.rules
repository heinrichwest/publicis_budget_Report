rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin (system admin, market admin, or legacy admin)
    function isAdmin() {
      return request.auth != null &&
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
              get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'systemAdmin' ||
              get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'marketAdmin');
    }

    // Helper function to check if user is system admin
    function isSystemAdmin() {
      return request.auth != null &&
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'systemAdmin';
    }

    // Helper function to check if user is market admin
    function isMarketAdmin() {
      return request.auth != null &&
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'marketAdmin';
    }

    // Users collection rules
    match /users/{userId} {
      // Allow any authenticated user to read
      allow read: if request.auth != null;

      // Allow users to create their own document
      allow create: if request.auth != null && request.auth.uid == userId;

      // Allow users to update their own document OR admins to update any
      allow update: if request.auth != null &&
                    (request.auth.uid == userId || isAdmin());

      // Only admins can delete users
      allow delete: if isAdmin();
    }

    // Markets collection
    match /markets/{marketId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // Currency Rates collection
    match /currencyRates/{rateId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // Mediums collection
    match /mediums/{mediumId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // Activity Plan collection
    match /activityPlan/{activityId} {
      // Allow all authenticated users to read
      allow read: if request.auth != null;

      // Allow system admins to write any activity
      allow write: if isSystemAdmin();

      // Allow market admins to write activities for their assigned market
      allow create, update: if isMarketAdmin() &&
                            exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                            get(/databases/$(database)/documents/users/$(request.auth.uid)).data.assignedMarket == request.resource.data.market;

      // Allow market admins to delete activities for their assigned market
      allow delete: if isMarketAdmin() &&
                    exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                    get(/databases/$(database)/documents/users/$(request.auth.uid)).data.assignedMarket == resource.data.market;

      // Allow managers to write activities for their assigned market
      allow create, update: if request.auth != null &&
                            exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                            get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'manager' &&
                            get(/databases/$(database)/documents/users/$(request.auth.uid)).data.assignedMarket == request.resource.data.market;

      // Allow managers to delete activities for their assigned market
      allow delete: if request.auth != null &&
                    exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                    get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'manager' &&
                    get(/databases/$(database)/documents/users/$(request.auth.uid)).data.assignedMarket == resource.data.market;
    }

    // Actuals collection
    match /actuals/{actualId} {
      // Allow all authenticated users to read
      allow read: if request.auth != null;

      // Allow system admins to write any actual
      allow write: if isSystemAdmin();

      // Allow market admins to write actuals for their assigned market
      allow create, update: if isMarketAdmin() &&
                            exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                            get(/databases/$(database)/documents/users/$(request.auth.uid)).data.assignedMarket == request.resource.data.market;

      // Allow market admins to delete actuals for their assigned market
      allow delete: if isMarketAdmin() &&
                    exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                    get(/databases/$(database)/documents/users/$(request.auth.uid)).data.assignedMarket == resource.data.market;
    }

    // Default rule: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
